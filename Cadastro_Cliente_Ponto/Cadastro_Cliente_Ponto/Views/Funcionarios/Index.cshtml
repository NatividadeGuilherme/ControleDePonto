@model List<Cadastro_Cliente_Ponto.Models.Funcionario>
@using (Html.BeginForm())
{ 
<div class="row">
    <div class=" col-md-12">
        <table class="table table-hover table-border table-striped" >
            <tr>
                <th>Código</th>
                <th>Nome</th>
                <th>Endereço</th>
                <th>CPF</th>
                <th>Data de Nascimento</th>
                <th></th>
                <th></th>
            </tr>
            <tbody>
                @foreach (var funcionario in Model)
                {
                    <tr>
                        <td>@funcionario.Codigo</td>
                        <td>@funcionario.Nome</td>
                        <td>@funcionario.Endereco</td>
                        <td>@funcionario.Cpf</td>
                        <td>@funcionario.Data_De_Nascimento</td>
                        <td>@Html.ActionLink("Alterar","Alterar", new { codigo = funcionario.Codigo } )</td>
                        <td>@Html.ActionLink("Excluir", "Excluir", new { codigo= funcionario.Codigo})</td>
                    </tr>
                    }
            </tbody>
        </table>
    </div>
</div>
}